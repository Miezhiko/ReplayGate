{
  "name": "replay-gate",
  "version": "0.0.1",
  "description": "Simple replay analyzer",
  "author": {
    "name": "Qeenon"
  },
  "build": {
    "win": {
      "target": [
        "portable"
      ],
      "icon": "replay.ico"
    },
    "asar": false,
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "main": "electron/index.js",
  "scripts": {
    "compile": "tsc --outDir electron && copyfiles -f src/index.html electron",
    "start": "npm run compile && electron --no-sandbox .",
    "package": "npm run compile && electron-builder"
  },
  "dependencies": {
    "w3gjs": "^2.1.0"
  },
  "devDependencies": {
    "copyfiles": "2.3.0",
    "electron": "10.1.1",
    "electron-builder": "22.8.0",
    "typescript": "4.0.2"
  }
}
